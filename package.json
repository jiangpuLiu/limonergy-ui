{
  "name": "limonergy-ui-monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "pnpm --filter @limonergy-ui/play dev",
    "story": "pnpm --filter @limonergy-ui/play storybook",
    "lint:lint-staged": "lint-staged",
    "docs:dev": "pnpm --filter @limonergy-ui/docs dev",
    "docs:build": "pnpm --filter @limonergy-ui/docs build",
    "test:filter": "cross-env NODE_ENV=test pnpm --filter",
    "test": "run-s test-utils test-hooks test-comp",
    "test-utils": "pnpm run test:filter @limonergy-ui/utils test",
    "test-comp": "pnpm run test:filter @limonergy-ui/components test",
    "test-hooks": "pnpm run test:filter @limonergy-ui/hooks test",
    "build:filter": "cross-env NODE_ENV=production pnpm --filter",
    "build": "run-s build-hooks build-utils build-comp",
    "build-comp": "pnpm run build:filter limonergy-ui build",
    "build-hooks": "pnpm run build:filter @limonergy-ui/hooks build",
    "build-utils": "pnpm run build:filter @limonergy-ui/utils build",
    "build:dev": "pnpm run build:filter limonergy-ui build:watch",
    "format": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "lint:eslint": "eslint 'packages/**/*.{ts,vue,tsx}' 'libs/**/*.{ts,vue,tsx}' --cache --fix",
    "lint:style": "stylelint 'packages/**/*.{css,scss,vue}' 'libs/**/*.{css,scss,vue}' --cache --fix",
    "prepare": "husky install",
    "commitlint": "commitlint --config commitlint.config.cjs -e -V"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@popperjs/core": "^2.11.8",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.5",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/tsconfig": "^0.5.1",
    "async-validator": "^4.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss-color-mix": "^1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.1",
    "prettier": "^2.8.7",
    "release-it": "^17.3.0",
    "rollup": "^4.18.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "shelljs": "^0.8.5",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.6.0",
    "terser": "^5.31.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vite-plugin-compression2": "^1.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.21"
  },
  "dependencies": {
    "@limonergy-ui/components": "workspace:*",
    "@limonergy-ui/hooks": "workspace:*",
    "@limonergy-ui/theme": "workspace:*",
    "@limonergy-ui/utils": "workspace:*",
    "@limonergy-ui/vite-plugins": "workspace:*",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^24.1.0",
    "limonergy-ui": "workspace:*",
    "lodash-es": "^4.17.21",
    "vue": "^3.4.29"
  }
